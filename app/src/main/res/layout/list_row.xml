<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/contd_bacvk"
        android:background="@color/colorPrimary"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image_v"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image_v"
            android:orientation="vertical">

            <com.android.llc.myapplication.fontmod.Roboto_Light
                android:id="@+id/text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Id :111111111"
                android:textColor="#333333"
                android:textSize="14sp" />

            <com.android.llc.myapplication.fontmod.Roboto_Medium
                android:id="@+id/emp_name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Name"
                android:textSize="16sp"
                android:textColor="#333333" />
            <com.android.llc.myapplication.fontmod.Roboto_Light
                android:id="@+id/template_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Template Id :123456"
                android:textColor="#333333"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/right_chev"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_chevron_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#c3c3c3" />
</LinearLayout>